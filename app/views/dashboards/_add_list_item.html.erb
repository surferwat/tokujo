<%= link_to !with_max ? route_path : list_items&.size < 2 ? route_path : accounts_plans_path do %>
  <div class="h-36 items-center mt-3 sm:mt-0 px-6 py-5 rounded-md border border-slate-400 focus:outline-none hover:bg-black hover:text-white">
    <div class="flex flex-col items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 -960 960 960" class="mx-auto w-12 h-12">
        <path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"/>
      </svg>
      <% if list_items&.size > 0 %>
        <p class="mt-2 text-base">Add another <%= list_item_name %></p>
      <% else %>
        <p class="mt-2 text-base">Add a <%= list_item_name %></p>
      <% end %>
    </div>
  </div>
<% end %>