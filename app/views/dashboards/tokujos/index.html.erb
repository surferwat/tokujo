<% content_for :aside do %>
  <div class="flex justify-end" data-controller="option-dialog">
    <button class="absolute", data-action="click->option-dialog#show", data-option-dialog-target="dialogButton">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </button>
    <div class="absolute w-80 h-48 rounded-tr-lg bg-black hidden", data-option-dialog-target="optionsDialog">
      <div class="grid grid-cols-1">
        <div class="col-span-1 flex justify-end">
          <button class="", data-action="click->option-dialog#hide">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-white w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </button>
        </div>
        <div class="col-span-1 grid py-3">
          <%= link_to "Edit this tokujo", edit_tokujo_path(@tokujo.id), class: "px-3 py-1 text-white text-base font-light hover:bg-black" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<h1 class="text-2xl font-semibold"><%=@tokujo.headline%></h1>
<div class="space-y-9 mt-3">
  <section class="flex flex-col sm:grid sm:gap-2 lg:grid-flow-col-dense lg:grid-cols-3">
    <div class="sm:col-start-1 sm:col-span-2">
      <h1 class="py-3 text-lg font-medium text-gray-900">Tokujo detail</h1>
      <div class="space-y-6">
        <div class="bg-white sm:rounded-lg">
          <div class="py-5">
            <%= detail_dl_rows(@tokujo.attributes) %>
          </div>
        </div>
      </div>
    </div>

    <div class="sm:col-start-3">
      <h1 class="py-3 text-lg font-medium text-gray-900">Sales page QR code & URL</h1>
    
      <div data-controller="download-image">
        <h1 class="py-3 text-lg font-medium text-gray-900">QR code</h1>
        <div class="flex items-center space-x-2">
          <%= image_tag @tokujo_sales_qr_code_png_url,  {data: { download_image_target: "image" }}  %>
          <button data-action="click->download-image#download">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
            </svg>
          </button>
        </div>
      </div>

       <div data-controller="copy-to-clipboard" class="lg:col-start-3 lg:col-span-1">
        <h1 class="py-3 text-lg font-medium text-gray-900">URL</h1>
        <div class="flex items-center space-x-2">
          <%= text_field_tag nil, @tokujo_sales_url, {data: { copy_to_clipboard_target: "url" }, class: "appearance-none block w-full px-3 border border-slate-400 rounded-md shadow-sm text-base placeholder-gray-400 focus:outline-none focus:ring-gray-900 focus:border-gray-900", disabled: true} %>
          <button data-action="click->copy-to-clipboard#copy">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
            </svg>
          </button>
        </div>
      </div>

    </div>
  </section>




  <section class="grid grid-cols-1 sm:grid-cols-3 sm:gap-4">
    <%= render partial: "card_square", locals: { route_path: dashboard_tokujos_orders_path(@tokujo.id), header: "Orders" } %>
    <%= render partial: "card_square", locals: { route_path: dashboard_tokujos_user_patrons_path(@tokujo.id), header: "Patrons" } %>
  </section>
</div>