<% content_for :title do %>
<% end %>

<div class="mx-auto py-16 sm:px-6 lg:px-8 lg:grid lg:grid-cols-2 lg:gap-x-8">
  
  <!-- Tokujo sales title -->
  <%= render partial: "title", locals: { tokujo_headline: @tokujo_headline, tokujo_description: @tokujo_description } %>

  <!-- Tokujo image -->
  <%= render partial: "image", locals: { tokujo_image_attached: @is_image_attached, tokujo_image: @tokujo_image} %>

  <!-- Tokujo sales body -->
  <div class="mt-10 lg:col-start-1 lg:row-start-2 lg:max-w-lg">
    <section aria-labelledby="options-heading">
      <div> 
        <p class="flex text-lg text-gray-900 sm:text-xl">
          <%= render partial: "shared/price", locals: { price: @price_with_tax, with_tax_text: true } %>
        </p>
        <p class="flex text-lg text-gray-900 sm:text-xl">
          <span><%#= @number_of_items_remaining %></span>
          <%# <span>&nbspof</span> %>
          <span><%#= @number_of_items_available %></span>
          <%# <span>&nbspavailable</span> %>
          <span><%= @number_of_items_available %></span>
          <span>&nbsp点中、残り</span>
          <span><%= @number_of_items_remaining %></span>
          <span>&nbsp点</span>
        </p>
        <p class="flex text-lg text-gray-900 sm:text-xl">
          <%# Order period start date: <%= @order_period_starts_at %>
          注文期間開始日: <%= @order_period_starts_at %>
        <p>
        <p class="flex text-lg text-gray-900 sm:text-xl">
          <%# Order period end date: <%= @order_period_ends_at %> 
          注文期間終了日:　<%= @order_period_ends_at %>
        <p>
        <p class="flex text-lg text-gray-900 sm:text-xl">
          <%# Eat period start date: <%= @eat_period_starts_at %>
          ご来店可能期間の開始日:　<%= @eat_period_starts_at %>
        <p>
        <p class="flex text-lg text-gray-900 sm:text-xl">
          <%# Eat period end date: <%= @eat_period_ends_at %>
          ご来店可能期間の終了日:　<%= @eat_period_ends_at %>
        <p>
      </div>
      <!-- Tokujo form -->
      <div class="mt-10">
        <%= render partial: "form", locals: { new_tokujo_sale_patron_path: new_tokujo_sale_patron_path, checkout_session_id: @checkout_session_id, tokujo_id: @tokujo_id } %>
      </div>
    </section>
  </div>
</div>