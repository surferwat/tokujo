<% content_for :title do %>
  <%= t("views.tokujo_sales.show_for_delayed.shop") %>
<% end %>

<div class="mx-auto py-16 lg:grid lg:grid-cols-2 lg:gap-x-8">
  
  <!-- Tokujo sales title -->
  <%= render partial: "title", locals: { tokujo_headline: @tokujo_headline, tokujo_description: @tokujo_description } %>

  <!-- Tokujo image -->
  <%= render partial: "image", locals: { tokujo_image_attached: @is_image_attached, tokujo_image_url: @tokujo_image_url} %>

  <!-- Tokujo sales body -->
  <div class="mt-10 lg:col-start-1 lg:row-start-2 lg:max-w-lg">
    <section aria-labelledby="options-heading" class="space-y-3">
      <div> 
        <p class="flex text-lg font-semibold text-gray-900">
          <%= render partial: "shared/price", locals: { price: @price_with_tax, with_tax_text: true } %>
        </p>
        <p class="flex text-lg font-semibold text-gray-900">
          <span><%= t("views.tokujo_sales.show_for_delayed.number_of_items_ratio", number_of_items_available: @number_of_items_available, number_of_items_remaining: @number_of_items_remaining)%></span>
        </p>
        <p class="flex text-lg text-gray-900">
          <%= t("views.tokujo_sales.show_for_delayed.order_period_start_date") %>: <%= @order_period_starts_at %>
        <p>
        <p class="flex text-lg text-gray-900">
          <%= t("views.tokujo_sales.show_for_delayed.order_period_end_date") %>: <%= @order_period_ends_at %>
        <p>
        <p class="flex text-lg text-gray-900">
          <%= t("views.tokujo_sales.show_for_delayed.eat_period_start_date") %>: <%= @eat_period_starts_at %>
        <p>
        <p class="flex text-lg text-gray-900">
          <%= t("views.tokujo_sales.show_for_delayed.eat_period_end_date") %>: <%= @eat_period_ends_at %>
        <p>
      </div>
      <div>
        <p class="flex text-lg font-semibold text-gray-900">
          ï¼Š<%= t("views.tokujo_sales.show_for_delayed.card_will_be_charged_only_if_all_available_quantities_are_purchased") %>
        <p>
      </div>
      <!-- Tokujo form -->
      <div class="mt-10">
        <%= render partial: "form", locals: { new_tokujo_sale_patron_path: new_tokujo_sale_patron_path, checkout_session_id: @checkout_session_id, tokujo_id: @tokujo_id } %>
      </div>
    </section>
  </div>
</div>