 <%= form_with class: "space-y-6", method: "get", url: new_tokujo_sale_patron_path do |form| %>
    <div class="flex items-center space-x-3">
        <span><%#= label_tag :size %></span>
        <span><%= label_tag :数量 %></span>
        <span class="w-16"><%= number_field_tag :size, 1, { min: 1, step: 1, class: "appearance-none block w-full px-3 py-3 border border-slate-400 rounded-md shadow-sm text-base placeholder-gray-400 focus:outline-none focus:ring-gray-900 focus:border-gray-900" } %></span>
    </div>
    <%= form.hidden_field :checkout_session_id, value: checkout_session_id %>
    <%= form.hidden_field :tokujo_id, value: tokujo_id %>
    <%# <%= form.submit "Proceed to checkout" %>
    <%= form.submit "チェックアウトに進む" %>
  <% end %>