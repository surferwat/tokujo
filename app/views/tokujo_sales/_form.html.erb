 <%= form_with class: "space-y-6", method: "get", url: new_tokujo_sale_patron_path do |form| %>
    <div class="flex items-center space-x-3">
        <span><%= label_tag :size %></span>
        <span class="w-16"><%= number_field_tag :size, 1, { min: 1, step: 1 }%></span>
    </div>
    <%= form.hidden_field :checkout_session_id, value: @checkout_session_id %>
    <%= form.hidden_field :tokujo_id, value: @tokujo.id %>
    <%= form.submit "Proceed to checkout" %>
  <% end %>